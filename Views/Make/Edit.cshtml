@model BeekeepingStore.Models.Make
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<br />
<h2 class="text-info">Edit Make of Propolis</h2>
<form method="post" action="Edit">
    <div class="col-2">
        <label asp-for="Name"></label>
    </div>
    <div class="col-4">
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="form-group ">
        <input type="submit" class="btn btn-primary" asp-route="@Model.Id" value="Update" />
        <a asp-action="Index" class="btn btn-success">Back</a>
    </div>

</form>

